<div class="d-flex justify-content-center p-5" style="background-image: url('<%= image_path 'wallpaper.png', crop: :fill%> ');">
  <div class="form-container">
    <p class="title">Welcome back</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password",  class: "input" } %>
        <p class="page-link pb-2">
          <span class="page-link-label"><%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
            <% end %></span>
        </p>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "form-btn", style: "width: 290px" %>
      </div>
      <p class="sign-up-label pt-4">
        Don't have an account?<span class="sign-up-link"><%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name) %><br />
          <% end %></span>
      </p>
    <% end %>
  </div>
</div>
