<% @lessons.each do |lesson| %>
  <%= link_to lesson_path(lesson) do %>
    <div class="card-identity" style="background-image: url('<%= image_path 'card-logo.png' %>')">
      <div class="card-identity-content">
        <div class="card-identity-avatar">
          <%= cl_image_tag lesson.user.photo.key, gravity: "face", height: 300, width: 400, crop: :fill %>
          <h2><%= lesson.user.name %></h2>
        </div>
        <p><%= lesson.title.titleize %></p>
        <p class="card-identity-tags">Duration: <%= lesson.duration.round(-1) %> minutes</p>
      </div>
    </div>
  <% end %>
<% end %>
