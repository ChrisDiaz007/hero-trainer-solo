<div class="container mt-3">
  <div class="row mb-3">
    <%= simple_form_for :search, url: root_path, method: :get, html: {class: "p-0"} do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-2 filter-container">
      <div class="btn-primary btn">
        Filter 1
      </div>
    </div>
    <div class="col-6">
      <% @lessons.each do |lesson| %>
        <div class="card-product mx-3 mb-2">
          <%= link_to lesson_path(lesson) do %>
            <img src="">
            <div class="card-product-infos">
              <%= lesson.title.titleize %>
              <br>
              <%= lesson.user.name.titleize %>
              <br>
              <%= lesson.duration.round(-1) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-4">
    <div class="map-container">
      <div class="map-view"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    </div>
  </div>
</div>
