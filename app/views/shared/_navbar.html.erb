<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="row w-100 align-items-center">
      <!-- Center - Hero Trainer Title -->
      <div class="content-navbar d-flex col-4">
        <%= link_to root_path, class: "d-flex text-decoration-none text-white" do %>
          <div><%= image_tag 'logo.png', style: "height: 60px; width: auto;" %> </div>
          <div>
            <h3 class="m-auto">Hero Trainer</h3>
            <h6>Ultimate Hero Center</h6>
          </div>
        <% end %>
      </div>
      <!-- Left Side - Navigation Links -->
      <div class="col-4 pt-3">
        <div class="nav-links d-flex mb-3 ms-3">
          <%= link_to "Home", root_path, class: "mx-3 nav-link" %>
          <%= link_to "About", root_path, class: "mx-3 nav-link" %>
          <%= link_to "Trainers", lessons_path, class: "mx-3 nav-link" %>
          <%= link_to "Classes", lessons_path, class: "mx-3 nav-link" %>
          <%= link_to "Blog", lessons_path, class: "mx-3 nav-link" %>
          <%= link_to "Pricing", lessons_path, class: "mx-3 nav-link" %>
          <%= link_to "Contact", lessons_path, class: "mx-3 nav-link" %>
        </div>
      </div>
      <!-- Center - Hero Trainer Title -->
      <!-- Right Side - Button and Navigation Menu -->
      <div class="col-4 d-flex justify-content-end">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar Menu Items -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item active">
              </li>
              <li class="nav-item d-flex justify-content-between align-items-center">
                <%= link_to "Bookings", trainer_bookings_path, class: "mx-2 text-white nav-link" %>
                <%= link_to dashboard_path, class: "nav-link text-white mx-2" do %>
                  <i class="fa-solid fa-user fa-xl me-2" ></i>
                <% end %>
                <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item mx-2" %>
              </li>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Action", "#", class: "dropdown-item" %>
                <%= link_to "Another action", "#", class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <div>
              <li class="nav-item d-flex justify-content-between align-items-center">
                <%= link_to 'Create', new_user_registration_path, class: "nav-link text-white mx-4"%>
                <%= link_to "Login", new_user_session_path, class: "nav-link text-white mx-2" %>
              </li>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>
