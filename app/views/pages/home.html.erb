<div class="vh-100">
  <div class="d-flex justify-content-between">
  <div class="content">
    <h1>Hero Trainer</h1>
    <p>Connecting users with elite training partners
      for personalized workouts and skill development</p>
    <% if user_signed_in? %>
      <p><button><%= link_to "Browse Trainers", lessons_path %></button></p>
    <% else %>
        <button><%= link_to "Browser Trainer", lessons_path %> </button>
        <button><%= link_to "Get Started", new_user_session_path %></button>
      <% end %>
    </div>
    <%= render "sliders" %>
    <%= javascript_include_tag "sliders" %>
  </div>
</div>

<div class="vh-100 bg-white">
  <p>Test</p>
</div>
