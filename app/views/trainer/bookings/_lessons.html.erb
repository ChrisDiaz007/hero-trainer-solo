<div class="card-booking ps-4 py-4">
  <%= cl_image_tag current_user.photo.key, height: 400, width: 400, crop: :fill %>
  <div class="card-booking-infos">
    <div class="d-flex justify-content-between">
      <h2>
        <%= lesson.title.capitalize %>
      </h2>
    </div>
    <p><%= lesson.category %></p>
    <p><%= lesson.description %></p>
    <p>
      <i class="fa-solid fa-person"></i>
      <%= lesson.capacity %>
    </p>
    <div class="d-flex justify-content-between">
      <p>
        <i class="fa-solid fa-clock"></i>
        <%= lesson.duration %> minutes
      </p>
      <span class="fs-6">$<%= lesson.price %></span>
    </div>
  </div>
</div>
