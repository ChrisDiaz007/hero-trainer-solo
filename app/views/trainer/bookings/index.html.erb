<div class="container mt-3">
  <div class="row">
    <div class="container mt-3">
      <p> <%= @user.name.titleize %> </p>
    </div>
    <div class="container m-4">
      <%= link_to "+ Create a New Lesson", new_lesson_path, class: "btn btn-primary" %>
    </div>
  </div>
  <% @lessons.each do |lesson| %>
    <div>
      <div class="card-product mx-3 mb-2">
        <%= link_to lesson_path(lesson) do %>
          <img src="">
          <div class="card-product-infos">
            <%= lesson.title.titleize %>
            <br>
            <%= lesson.user.name.titleize %>
            <br>
            <%= lesson.duration.round(-1) %>
          </div>
        <% end %>
      </div>
      <%= render partial: "lesson_bookings", locals: {lesson: lesson } %>
    </div>
  <% end %>
</div>
